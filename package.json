{
  "build": {
    "appId": "chuck_norris_id",
    "win": {
      "target": ["nsis"],
      "icon": "icons/icono.ico"
    },
    "nsis":{
      "installerIcon": "icons/icono.ico",
      "uninstallerIcon": "icons/icono.ico",
      "license": "LICENSE",
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "extraFiles": "assets/*",
    "asar": true,
    "extraResources": "assets/images"
  },
  "name": "ChuckAPP",
  "version": "0.0.1",
  "description": "An application for notifier some phrases about Chuck Norris. HE IS YOUR BOSS!!",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "keywords": [
    "Chuck",
    "Norris",
    "Notification"
  ],
  "author": "alexsanro",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "node-notifier": "^5.4.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  }
}
